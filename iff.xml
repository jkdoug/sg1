<aliases>
   <alias
   name="getinfo_someone__"
   match="^\s*getinfo\s+(\w+)\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.get_info"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
 <alias
   name="enemy_someone__"
   match="^\s*enemy\s+(.+?)\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.declare_enemy"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
  <alias
   name="ally_someone__"
   match="^\s*ally\s+(.+?)\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.declare_ally"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
  <alias
   name="unenemy_someone__"
   match="^\s*unenemy\s+(.+?)\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.declare_unenemy"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
  <alias
   name="unally_someone__"
   match="^\s*unally\s+(.+?)\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.declare_unally"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
  <alias
   name="reject_someone__"
   match="^\s*reject\s+(.+?)\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.handle_reject"
   ignore_case="y"
   sequence="10000"
  >
  </alias>

  <alias
   name="keep_enemy__"
   match="^\s*iff\s+keep(?:enemy)?\s+([\w\s]+?)\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.handle_keep"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
  <alias
   name="unkeep_enemy__"
   match="^\s*iff\s+unkeep(?:enemy)?(?:\s+([\w\s]+?))?\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.handle_unkeep"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
  <alias
   name="show_keep__"
   match="^\s*iff\s+keep(?:enemy)?\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.show_keep"
   ignore_case="y"
   sequence="10000"
  >
  </alias>

  <alias
   name="ally_show__"
   match="^\s*iff\s+allies\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.show_allies"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
  <alias
   name="enemy_show__"
   match="^\s*iff\s+enemies\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.show_enemies"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
  <alias
   name="lusted_show__"
   match="^\s*iff\s+lusted\s*$"
   enabled="y"
   group="Actions"
   regexp="y"
   script="iff.show_lusted"
   ignore_case="y"
   sequence="10000"
  >
  </alias>
</aliases>

<triggers>
  <trigger
   enabled="y"
   group="Track"
   match="^([A-Z][a-z]+) is now one of your (enemies|allies)\.$"
   name="iff_enemy_ally_person__"
   regexp="y"
   script="iff.handle_ae"
   sequence="10000"
  >
  </trigger>
  <trigger
   enabled="y"
   group="Track"
   match="^You declare that ([A-Z][a-z]+) will no longer be one of your (enemies|allies)\.$"
   name="iff_unenemy_unally_person__"
   regexp="y"
   script="iff.handle_uae"
   sequence="10000"
  >
  </trigger>
  <trigger
   enabled="y"
   group="Track"
   match="^Your heart thumps as you gaze at ([A-Z][a-z]+) with love and adoration\.$"
   name="iff_lust_person__"
   regexp="y"
   script="iff.handle_lust"
   sequence="10000"
  >
  </trigger>
  <trigger
   enabled="y"
   group="Track"
   match="^You reject the friendship of ([A-Z][a-z]+)\.$"
   name="iff_unlust_person__"
   regexp="y"
   script="iff.handle_rejection"
   sequence="10000"
  >
  </trigger>

  <trigger
   enabled="y"
   group="Track"
   match="^You consider the following adventurers your (enemies|allies)\:$"
   name="iff_check_enemies_allies__"
   regexp="y"
   script="iff.handle_list"
   sequence="10000"
  >
  </trigger>

  <trigger
   enabled="n"
   group="Track"
   match="^([A-Z][a-z]+) is an enemy\.$"
   name="iff_enemy_line__"
   regexp="y"
   script="iff.handle_enemy"
   sequence="10000"
  >
  </trigger>
  <trigger
   enabled="n"
   group="Track"
   match="^([A-Z][a-z]+) is an ally\.$"
   name="iff_ally_line__"
   regexp="y"
   script="iff.handle_ally"
   sequence="10000"
  >
  </trigger>
  <trigger
   enabled="n"
   group="Track"
   match="^You feel an unusually strong lust for ([A-Z][a-z]+)\.$"
   name="iff_lust_line__"
   regexp="y"
   script="iff.handle_lusted"
   sequence="10000"
  >
  </trigger>

  <trigger
   enabled="y"
   group="Track"
   match="^(?:With an indignant grunt\, you remove everyone from your list of allies|You have no allies)\.$"
   name="iff_unally_all__"
   regexp="y"
   script="iff.handle_unally_all"
   sequence="10000"
  >
  </trigger>
  <trigger
   enabled="y"
   group="Track"
   match="^(?:In a moment of forgiveness\, you declare that you have no enemies|You have no enemies)\.$"
   name="iff_unenemy_all__"
   regexp="y"
   script="iff.handle_unenemy_all"
   sequence="10000"
  >
  </trigger>
</triggers>
