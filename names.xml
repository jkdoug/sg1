  <alias
   name="names_control__"
   match="^\s*(un)?(celest|glom(?:doring)?|mag(?:nagora)?|seren(?:wilde)?|halli(?:fax)?|gaudi(?:guch)?)(?:\s+(\w+))?\s*$"
   enabled="y"
   group="Interface"
   regexp="y"
   script="names.handle"
   ignore_case="y"
   sequence="100"
  >
  </alias>
</aliases>

