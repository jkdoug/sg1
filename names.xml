  <trigger
   enabled="y"
   group="Track"
   keep_evaluating="y"
   lines_to_match="2"
   match="^\*+\[ [A-Z\s]+ (SERENWILDE|MAGNAGORA|HALLIFAX) \]\*+\n(?:Commune Member|Citizen)\s+Rank\s+Position\s+CT\s*$"
   multi_line="y"
   name="names_cwho_start__"
   regexp="y"
   send_to="12"
   sequence="10000"
  >
  <send>EnableTrigger("names_cwho_add__", true)
EnableTrigger("names_cwho_end__", true)
flags.set("cwho", string.lower("%1"), 2)
prompt.queue(function ()
  EnableTrigger("names_cwho_add__", false)
  EnableTrigger("names_cwho_end__", false)
end)</send>
  </trigger>
  <trigger
   enabled="n"
   group="Track"
   keep_evaluating="y"
   match="^([A-Z][a-z]+)\s+"
   name="names_cwho_add__"
   regexp="y"
   send_to="12"
   sequence="10000"
  >
  <send>if flags.get("cwho") and not names.is_member("%1", flags.get("cwho")) then
  names.add("%1", flags.get("cwho"))
else
  names.mark("%1")
end</send>
  </trigger>
  <trigger
   enabled="n"
   group="Track"
   match="^\*+$"
   name="names_cwho_end__"
   regexp="y"
   send_to="12"
   sequence="9000"
  >
  <send>EnableTrigger("names_cwho_add__", false)
EnableTrigger("names_cwho_end__", false)</send>
  </trigger>

  <trigger
   enabled="y"
   group="Track"
   keep_evaluating="y"
   match="^\((Serenwilde|Magnagora|Hallifax)\)\: ([A-Z][a-z]+) (?:\(from .+?\) )?says\, \&quot;.+?\&quot;$"
   name="names_ct_add__"
   regexp="y"
   send_to="12"
   sequence="10000"
  >
  <send>if not names.is_member("%2", string.lower("%1")) then
  names.add("%2", string.lower("%1"))
else
  names.mark("%2")
end</send>
  </trigger>
</triggers>

